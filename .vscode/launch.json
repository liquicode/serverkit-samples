	"version": "0.2.0",
	"configurations": [
		{
			"name": "Sample: Test Config",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/samples/TestConfig/TestConfig.js",
			"args": [],
			"outputCapture": "std",
			"internalConsoleOptions": "openOnSessionStart",
		},
		{
			"name": "Sample: Maths Server",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"cwd": "${workspaceFolder}/samples/MathsServer",
			"program": "${workspaceFolder}/samples/MathsServer/MathsServer.js",
			"args": [],
			"outputCapture": "std",
			"internalConsoleOptions": "openOnSessionStart",
		},
		{
			"name": "Sample: Scrapesheet Server",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"cwd": "${workspaceFolder}/samples/Scrapesheet",
			"program": "${workspaceFolder}/samples/Scrapesheet/Scrapesheet.js",
			"args": [],
			"outputCapture": "std",
			"internalConsoleOptions": "openOnSessionStart",
		},
		{
			"name": "------------------------------------------",
		},
		{
			"name": "All Tests",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
			"args": [
				"-u",
				"bdd",
				"tests/*.js",
				"--timeout",
				"0",
				"--slow",
				"10",
				"--colors",
			],
			"outputCapture": "std",
			"internalConsoleOptions": "openOnSessionStart",
		},
		{
			"name": "301) SheetsService Tests",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
			"args": [
				"-u",
				"bdd",
				"tests/301*.js",
				"--timeout",
				"0",
				"--slow",
				"10",
				"--colors",
			],
			"outputCapture": "std",
			"internalConsoleOptions": "openOnSessionStart",
		},
		{
			"name": "------------------------------------------",
		},
		{
			"name": "Build - Release",
			"type": "node",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/build/build-release.js",
		},
	]
